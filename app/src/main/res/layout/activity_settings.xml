<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neatWhite"
    tools:context=".SettingsActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user name"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:textSize="50dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/neatBlue"
               />

            <View
                android:layout_width="400dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@color/lightGray" />

            <TextView
                android:id="@+id/messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Messages"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/messageicon"
                android:drawablePadding="5dp"/>

            <TextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Policies"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/termsicon"
                android:drawablePadding="2dp"
                />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log out"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/dooricon"
                android:drawablePadding="2dp"
                />

        </LinearLayout>



</RelativeLayout>