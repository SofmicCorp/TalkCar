<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neatWhite"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/neatBlue">

            <ImageView
                android:id="@+id/chats"
                android:layout_marginTop="5dp"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/inbox_icon" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/car_picker_background"
                android:layout_width="63dp"
                android:layout_height="58dp"
                android:src="@drawable/whitecircle" />

            <ImageView
                android:layout_marginLeft="6dp"
                android:id="@+id/car_picker"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >


            <ImageView
                android:id="@+id/menu_background"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/whitecircle"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/settings"
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_settings" />
            </RelativeLayout>


        </FrameLayout>


        </RelativeLayout>


    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/take_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/camera"
            android:background="@drawable/shadow_effect"
            android:paddingRight="10px"
            android:paddingBottom="10px"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/shine"
            android:layout_width="50dp"
            android:layout_marginLeft="-50dp"
            android:layout_height="170dp"
            android:src="@drawable/shine_effect" />

    </RelativeLayout>

        <ImageView
        android:id="@+id/add_car_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/addsign"
        android:background="@drawable/shadow_effect"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:paddingRight="5px"
        android:paddingBottom="5px"
        android:paddingTop="3px"
        android:paddingLeft="3px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
